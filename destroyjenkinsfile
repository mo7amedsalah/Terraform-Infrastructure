pipeline {
   agent any

   stages {
      stage('init') {
         steps {
            sh "terraform init -var ak=\"${env.AWS_ACCESS_KEY_ID}\" -var sk=\"${env.AWS_SECRET_ACCESS_KEY}\""
         }
      }
      stage('Destroy') {
         steps {
            sh "terraform destroy -auto-approve -var-file dev.tfvars"
         }
      }
   }
}
